<%- include('partials/header') %>

<div class="d-flex justify-content-between mb-3">
  <h2>User List</h2>
  <a href="/users/new" class="btn btn-primary">+ Add User</a>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <a href="/users/<%= user._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
          <form action="/users/<%= user._id %>?_method=DELETE" method="POST" class="d-inline">
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('partials/footer') %>
